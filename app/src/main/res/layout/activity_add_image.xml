<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15sp"
    android:layout_margin="4dp"
    android:background="@drawable/rain2"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.user.tutorialandtraining.AddImage">
    <Button
        android:layout_width="match_parent"
        android:text="choose picture"
        android:textAllCaps="false"
        android:textSize="25sp"

        android:textStyle="italic"
        android:layout_marginBottom="5dp"
        android:id="@+id/bimageid"
        android:layout_height="50dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#940733"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:id="@+id/eimageid"
        android:hint="Enter Subject/Topic Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="#940733"
        android:id="@+id/eimage2id"
        android:hint="Enter Figure Name" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/iimageid"
        />

    <ProgressBar
        android:id="@+id/prograssbarid"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:visibility="visible" />
    <Button
        android:layout_width="200dp"
        android:text="add image"
        android:textSize="20sp"
        android:textStyle="bold"


        android:textColor="#061050"
        android:id="@+id/b2imageid"
        android:layout_height="60dp" />


</LinearLayout>
