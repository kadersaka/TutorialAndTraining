<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/new6"
    android:orientation="vertical"
    tools:context="com.example.user.tutorialandtraining.UploadActivity">

    <Button
        android:layout_width="match_parent"
        android:id="@+id/secondchossebuttnid"
        android:text="Choose"
        android:textAlignment="center"
        android:textColor="#0a0753"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/secondtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="no file is selected" />

    <Button
        android:id="@+id/seconduploadbuttnid"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:textAllCaps="false"
        android:textColor="#780718"
        android:textStyle="italic"
        android:textSize="30sp"
        android:text="Upload" />

</LinearLayout>
