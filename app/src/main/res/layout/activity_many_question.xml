<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manyque"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.user.tutorialandtraining.ManyQuestion">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/xmicon"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:textColor="#061541"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:id="@+id/truefalsequestionid"
        android:text="True/False Question"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/multiplequestionid"
        android:textColor="#86092f"
        android:layout_marginBottom="10dp"
        android:text="Multiple Choice Question"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#161616"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/logoutid2"
        android:text="log out"
        />

</LinearLayout>
