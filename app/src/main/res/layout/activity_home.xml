<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user.tutorialandtraining.Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/new4"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="30sp"
        android:layout_height="match_parent">



    <ImageView
        android:layout_width="100dp"
        android:src="@drawable/addimage"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Section"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#910730"
        android:textSize="50sp"
        android:layout_marginBottom="30sp"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:text="Pictures"
        android:textStyle="italic"
        android:textColor="#0f2e06"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:id="@+id/pictureid"
        android:layout_marginBottom="30sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textStyle="italic"

        android:textColor="#6e0942"
        android:textSize="30sp"
        android:text="Important Topics and Equestions"
        android:id="@+id/videoid"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:text="PDF"
        android:textStyle="italic"
        android:textColor="#684e06"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:id="@+id/pdfbuttontouploadid"
        android:layout_marginTop="30sp"
        />



    </LinearLayout>

</ScrollView>
