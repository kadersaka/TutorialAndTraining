<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back1"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context="com.example.user.tutorialandtraining.trainingLogin">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/mm"
        android:text="Admin Register"
        android:layout_marginBottom="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#082584"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#060654"
        />

    <EditText
        android:id="@+id/e1adminid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:id="@+id/e2adminid"
        android:hint="At Least 6 Digits Password"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/buttonadminid"
        android:text="log in "
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:id="@+id/textadminid"
        android:text="Not a member?Register now.."
        />


</LinearLayout>
