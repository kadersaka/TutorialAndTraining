<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"


    tools:context="com.example.user.tutorialandtraining.ImpTopic">

    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"

        android:padding="15dp"
        android:gravity="center"
        android:layout_height="match_parent">
    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spnerid"
        android:entries="@array/genres"
        android:layout_height="50dp">

    </Spinner>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/ed1"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:hint="Chapter Name"
        android:layout_height="50dp" />




    <EditText
        android:layout_width="match_parent"
        android:id="@+id/brandid"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:hint="Sub Chapter/Level/Page"
        android:layout_height="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/productquantityid"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:hint="About Topics Brifly"
        android:layout_height="300dp" />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/phonenumid"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:hint="Important Equestions"
        android:layout_height="150dp" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/addressnameid"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"

        android:hint="Reviews"
        android:layout_height="100dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:text="add"
        android:textStyle="bold"

        android:background="#3259e6"
        android:textSize="30sp"
        android:id="@+id/orderbuttonid"
        />

    </LinearLayout>



</ScrollView>
